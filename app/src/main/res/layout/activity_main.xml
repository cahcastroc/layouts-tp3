<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80309B88"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="319dp"
        android:contentDescription="@string/logo"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:autofillHints=""
        android:background="@drawable/retangulo"
        android:backgroundTint="#9AFFFFFF"
        android:drawableStart="@drawable/iconname"
        android:ems="10"
        android:hint="@string/nome"
        android:includeFontPadding="false"
        android:inputType="textPersonName"
        android:lineSpacingExtra="8sp"
        android:paddingStart="10dp"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColorHint="#59232121"
        android:textDirection="inherit" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/retangulo"
        android:backgroundTint="#9AFFFFFF"
        android:drawableStart="@drawable/iconemail"
        android:ems="10"
        android:hint="@string/e_mail"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:textColorHint="#59232121"
        android:autofillHints="" />

    <Button
        android:id="@+id/btLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#B7DAA8"
        android:text="@string/entrar"
        android:textColor="#464444" />

</LinearLayout>